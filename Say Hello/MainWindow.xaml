<Window x:Class="Say_Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Say_Hello"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SayHelloButton" Content="Say Hello" HorizontalAlignment="Left" Margin="212,217,0,0" VerticalAlignment="Top" Click="SayHelloButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="212,88,0,0" TextWrapping="Wrap" Text="Hello there!" VerticalAlignment="Top" Width="360" Height="80" FontSize="36" TextAlignment="Center" BorderThickness="1,1,8,8"/>

    </Grid>
</Window>
